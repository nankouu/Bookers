<h1>Books</h1>

<% if flash[:notice]%>
   <p><%= flash[:notice]%></p>
<% end %>
  <table>

  	<thead>
  		<tr>
  			<th>title</th>
  			<th>body</th>
  		</tr>
  	</thead>


  <tbody>
  	<% @books.each do |book| %>
  	 <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to"Show", book_path(book) %></td>
        <td><%= link_to"Edit", edit_book_path(book.id) %></td>
        <td><%= link_to"Destroy",book_path(book.id),method: :delete,"data-confirm" => "Are you sure?"%></td>
    </tr>
 	<% end %>
 </tbody>
</table>

<h1>New book</h1>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	    <h4>タイトル</h4>
	    <%= f.text_field :title %>
	 
	    <h4>本文</h4>
	    <%= f.text_area :body %>
	 
	    <%= f.submit 'Create Book' %>
	 
	<% end %>